
<%- include('partials/header') %>

<form action="/guests/<%= id %>?_method=PUT" method="POST">
    <!-- GROUP DATE / TIME -->
    <div class="field is-horizontal" id="date-time">
        <!-- DATE -->
        <div class="field-label is-normal">
            <label class="label" for="date">Date</label>
        </div>
        <div class="field-body">
            <div class="control">
                <input class="input" type="date" name="date" value="<%= guest.date %>"  id="date" required>
            </div>
        </div>
        <!-- TIME -->
        <div class="field-label is-normal">
            <label class="label is-normal" for="time">Time</label>
        </div>
        <div class="field-body">
            <div class="control">
                <input class="input" type="time" name="time" value="<%= guest.time %>" id="time" required>
            </div>
        </div>
    </div>
    <!-- FIRST NAME -->
    <div class="field">
        <label class="label" for="name.first">First Name</label>
        <div class="control">
            <input class="input" type="text" name="name.first" placeholder="First Name" value="<%= guest.name.first %>" required>
        </div>
    </div>
    <!-- LAST NAME -->
    <div class="field">
        <label class="label" for="name.last">Last Name</label>
        <div class="control">
            <input class="input" type="text" name="name.last" placeholder="Last Name" value="<%= guest.name.last %>">
        </div>
    </div>
    <!-- PHONE # -->
    <div class="field">
        <label class="label" for="phone">Phone</label>
        <div class="control">
            <input class="input" type="tel" name="phone" placeholder="123-456-7891" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="<%= guest.phone %>" id="phone" required>
        </div>
    </div>
    <!-- EMAIL -->
    <div class="field">
        <label class="label" for="email">Email</label>
        <div class="control">
            <input class="input" type="email" name="email" placeholder="example@email.com" value="<%= guest.email %>" id="email">
        </div>
    </div>
    <!-- GUESTS -->
    <div class="field">
        <label class="label" for="guests">Guests</label>
        <div class="control">
            <input class="input" type="number" name="guests" placeholder="4" value="<%= guest.guests %>" id="guest" required>
        </div>
    </div>
    <!-- Table Number -->
    <div class="field">
        <label class="label" for="table">Table</label>
        <div class="control">
            <input class="input" type="text" name="table" placeholder="T1" value="<%= guest.table %>" id="table">
        </div>
    </div>
    <!-- COMMENTS -->
    <div class="field">
        <label class="label" for="comments">Comments</label>
        <div class="control">
            <textarea class="textarea" name="comments" cols="25" rows="4" placeholder="Birthday Party ðŸ¥³" id="comments"><%= guest.comments %></textarea>
        </div>
    </div>
    <!-- SUBMIT BUTTON -->
    <div class="control">
        <input class="button is-outlined is-primary" type="submit" value="Update Booking">
        <a href="/guests" class="button is-outlined is-danger">Cancel</a>
    </div>
</form>

<%- include('partials/footer') %>
